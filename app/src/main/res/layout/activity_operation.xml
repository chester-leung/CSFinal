<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.csfinal.Operation">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/redgridpaper"
            android:scaleType="fitXY"
            android:alpha="0.6" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="setNums"
            android:text="New Numbers"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:typeface="sans"
            android:textColor="#FAFAFA"
            android:background="#F44336"/>

        <LinearLayout
            android:id="@+id/nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button5"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textSize="50dp"
                android:textColor="#424242"/>

            <EditText
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:autoText="false"
                android:editable="false"
                android:ems="10"
                android:inputType="number"
                android:numeric="integer"
                android:text="0"
                android:textAlignment="center"
                android:textSize="50dp"
                android:textColor="#424242"/>


        </LinearLayout>

        <EditText
            android:id="@+id/user_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nums"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:hint="Your Answer"
            android:inputType="number"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="#FFEBEE"/>

        <LinearLayout
            android:id="@+id/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_input"
            android:layout_centerHorizontal="true">

            <CheckBox
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_below="@id/num1"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:layout_marginRight="30dp"
                android:onClick="sum"
                android:text="Sum"
                android:textSize="20sp"
                android:textColor="#9E9E9E"/>

            <CheckBox
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:onClick="difference"
                android:text="Difference"
                android:textSize="20sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/easy"
            android:layout_centerHorizontal="true">

            <CheckBox
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="8dp"
                android:onClick="product"
                android:text="Product"
                android:textSize="20sp"
                android:textColor="#9E9E9E"/>

            <CheckBox
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button3"
                android:layout_marginLeft="8dp"
                android:onClick="quotient"
                android:text="Quotient"
                android:textSize="20sp"
                android:textColor="#9E9E9E"/>

        </LinearLayout>

        <Button
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:onClick="sendToScreen"
            android:text="Check My Answer"
            android:background="#F44336"/>


    </RelativeLayout>



